<html>
  <head>
  </head>

  <body>
    <ul id="links">
      <% @links.each do |link| %>
      <li>
        title: <%= link.title %>
        url: <%= link.url %>
        <% if !link.tags.empty? %>
        tag: <%= link.tags.first.name %>
        <% end %>
      </li>
      <% end %>
    </ul>
  </body>
</html>
